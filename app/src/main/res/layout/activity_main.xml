<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="marwor.rampanglecounter.MainActivity">

    <TextView
        android:id="@+id/Percent_label"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Percent"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/PercentGetText"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Angle_label"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/Angle_label"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Angle"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/AngleGetText"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Lenght_label"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/Height_label"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Height"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/HeightGetText"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Main_text"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/Lenght_label"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Length"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/LenghtGetText"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Height_label"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/CountButton"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginBottom="-19dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Count"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/ResetButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Reset"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/PercentGetText"
        android:layout_width="166dp"
        android:layout_height="50dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@+id/Percent_unit"
        app:layout_constraintTop_toBottomOf="@+id/AngleGetText" />

    <EditText
        android:id="@+id/AngleGetText"
        android:layout_width="166dp"
        android:layout_height="50dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@+id/Angel_unit"
        app:layout_constraintTop_toBottomOf="@+id/LenghtGetText" />

    <EditText
        android:id="@+id/LenghtGetText"
        android:layout_width="166dp"
        android:layout_height="50dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@+id/Lenght_unit"
        app:layout_constraintTop_toBottomOf="@+id/HeightGetText" />

    <EditText
        android:id="@+id/HeightGetText"
        android:layout_width="166dp"
        android:layout_height="50dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@+id/Height_unit"
        app:layout_constraintTop_toBottomOf="@+id/Main_text" />

    <TextView
        android:id="@+id/Main_text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Count your ramp dimensions"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/Lenght_unit"
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="[m]"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Height_unit" />

    <TextView
        android:id="@+id/Angel_unit"
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="[áµ’]"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lenght_unit" />

    <TextView
        android:id="@+id/Percent_unit"
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="[%]"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Angel_unit" />

    <TextView
        android:id="@+id/Height_unit"
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="[m]"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_text" />

</android.support.constraint.ConstraintLayout>
